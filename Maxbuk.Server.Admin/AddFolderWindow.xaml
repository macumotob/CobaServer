<Window x:Class="Maxbuk.Server.Admin.AddFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Folder"  Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition/>
      <ColumnDefinition Width="40"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="30"/>
      <RowDefinition Height="20"/>
      <RowDefinition Height="30"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="Add Shared Folder" HorizontalAlignment="Center"
           FontSize="15" FontFamily="Tahoma"/>
    <Label Grid.Row="1" Grid.Column="0" Content="Name"/>
    <TextBox x:Name="_textName" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="2 2 2 2"/>

    <Label Grid.Row="2" Grid.Column="0" Content="Folder"/>
    <TextBox x:Name="_textFolder" Grid.Row="2" Grid.Column="1" Margin="2 2 2 2"/>
    <Button x:Name="_buttonSelectFolder" Grid.Column="2" Grid.Row="2" Content="..." Margin="2 2 2 2" Click="_buttonSelectFolder_Click"/>

    <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="_buttonSave" Content="Save" Click="_buttonSave_Click" Margin="2 2 2 2"/>
  </Grid>
</Window>
